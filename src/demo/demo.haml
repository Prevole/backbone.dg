    %title= "Datagrid Demo"

    %meta{"http-equiv" => "Content-Type", content: "text/html; charset=utf-8"}

    %link{href: "bootstrap/css/bootstrap.min.css", media: "all", rel: "stylesheet", type: "text/css"}
    %link{href: "bootstrap/css/bootstrap-responsive.min.css", media: "all", rel: "stylesheet", type: "text/css"}

    %link{href: "demo.css", media: "all", rel: "stylesheet", type: "text/css"}

    %script{src: "js/underscore.js", type: "text/javascript"}
    %script{src: "js/json2.js", type: "text/javascript"}
    %script{src: "js/jquery.js", type: "text/javascript"}
    %script{src: "js/backbone.js", type: "text/javascript"}
    %script{src: "js/backbone.wreqr.js", type: "text/javascript"}
    %script{src: "js/backbone.eventbinder.js", type: "text/javascript"}
